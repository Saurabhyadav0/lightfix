generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(CITIZEN)
  complaints Complaint[]
  createdAt DateTime   @default(now())
  coins      Int         @default(0) 
  mobile     String      @unique  
}

model Complaint {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  photoUrl    String?
  location    String?
  category    String
  severity    Int      @default(1)
  status      Status   @default(RECEIVED)
  assignedTo  String?
  citizenId   Int
  citizen     User     @relation(fields: [citizenId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  priority   Int @default(1)
}

enum Role {
  CITIZEN
  ADMIN
}

enum Status {
  RECEIVED
  IN_PROGRESS
  RESOLVED
}
